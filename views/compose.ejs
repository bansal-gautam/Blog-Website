<%- include('partials/header') -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">    
            <label for="titleBox">Title</label>
            <input type="text" class="form-control" name="postTitle" id="titleBox">
        </div>
        <div class="form-group">
            <label for="postBox">Post</label>
            <textarea class="form-control" name="postBody" id="postBox" rows="5"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

    <%- include('partials/footer') -%>